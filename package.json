{
  "name": "cs2_server_setup",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "Oleksand Besarab",
  "type": "module",
  "main": "src/install.js",
  "scripts": {
    "plugins:install": "npm i && dotenv -- node ./src/install.js",
    "plugins:configure": "dotenv -- node ./src/configure.js",
    "plugins:uninstall": "rimraf temp ./cs2/game/csgo/addons website ./cs2/game/csgo/counterstrikesharp",
    "game:update": "node ./src/update-cs2.js",
    "docker:build": "docker compose up -d --build"
  },
  "dependencies": {
    "archive-wasm": "^2.1.0",
    "dotenv-cli": "^11.0.0",
    "rimraf": "^6.1.2"
  },
  "cs2": {
    "dependencies": {
      "metamod": {
        "linux": "https://mms.alliedmods.net/mmsdrop/2.0/mmsource-2.0.0-git1380-linux.tar.gz",
        "win32": "https://mms.alliedmods.net/mmsdrop/2.0/mmsource-2.0.0-git1380-windows.zip"
      },
      "cssharp": {
        "runtime": {
          "linux": "https://github.com/roflmuffin/CounterStrikeSharp/releases/download/v1.0.356/counterstrikesharp-with-runtime-linux-1.0.356.zip",
          "win32": "https://github.com/roflmuffin/CounterStrikeSharp/releases/download/v1.0.356/counterstrikesharp-with-runtime-windows-1.0.356.zip"
        },
        "plugins": {
          "playerSettings": "https://github.com/NickFox007/PlayerSettingsCS2/releases/download/0.9.3/PlayerSettings.zip",
          "anyBaseLib": "https://github.com/NickFox007/AnyBaseLibCS2/releases/download/0.9.4/AnyBaseLib.zip",
          "menuManager": "https://github.com/NickFox007/MenuManagerCS2/releases/download/1.4.1/MenuManager.zip",
          "simpleAdmin": "https://github.com/daffyyyy/CS2-SimpleAdmin/releases/download/build-1.7.8-beta-6/CS2-SimpleAdmin-1.7.8-beta-6.zip"
        },
        "weaponPaints": "https://github.com/Nereziel/cs2-WeaponPaints/releases/download/build-399/WeaponPaints.zip",
        "weaponPaintsWebsite": "https://github.com/Nereziel/cs2-WeaponPaints/releases/download/build-399/WeaponPaints-Website.zip"
      }
    }
  }
}